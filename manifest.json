{
  "manifest_version": 3,
  "name": "OpenU ID AutoFill",
  "version": "1.0",
  "description": "Automatically fills your student ID on the Open University login page",

  "permissions": ["storage", "activeTab"],

  "host_permissions": [
    "https://www.openu.ac.il/*",
    "https://sso.apps.openu.ac.il/*",
    "https://opsrv.apps.openu.ac.il/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.openu.ac.il/*",
        "https://sso.apps.openu.ac.il/*",
        "https://opsrv.apps.openu.ac.il/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",

      "all_frames": true
    }
  ]
}
